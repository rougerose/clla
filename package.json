{
    "name": "lla",
    "version": "0.0.1",
    "description": "",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "autoprefixer": "postcss -r dist/css/lla_styles.css",
        "build": "run-s clean copy scss js autoprefixer",
        "clean": "rimraf dist/{css/*,js/*}",
        "copy": "recursive-copy 'src/copy' 'dist'",
        "scss": "sass --no-source-map --load-path=node_modules src/scss/index.scss dist/css/lla_styles.css",
        "js": "rollup -c",
        "serve": "browser-sync start -p 'http://localhost:8888/clla.maquette/' -f \"dist/css/*.css, dist/js/*.js, **/*.html, !node_modules/**/*.html\"",
        "watch:css": "chokidar './src/scss/**/*.scss' -c 'npm run build'",
        "watch:js": "chokidar './src/js/**/*.js' -c 'npm run build'",
        "watch": "run-p serve watch:*",
        "dev": "run-s build watch",
        "prod": "NODE_ENV=production npm run build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rougerose/lla.git"
    },
    "author": "christophe le drean",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/rougerose/lla/issues"
    },
    "homepage": "https://github.com/rougerose/lla#readme",
    "devDependencies": {
        "@rollup/plugin-commonjs": "^25.0.5",
        "@rollup/plugin-node-resolve": "^15.2.2",
        "@rollup/plugin-terser": "^0.4.4",
        "autoprefixer": "^10.4.16",
        "body-scroll-lock": "^4.0.0-beta.0",
        "browser-sync": "^2.29.3",
        "chokidar-cli": "^3.0.0",
        "modern-css-reset": "^1.4.0",
        "npm-run-all2": "^6.1.1",
        "postcss": "^8.4.31",
        "postcss-cli": "^10.1.0",
        "postcss-csso": "^6.0.1",
        "recursive-fs": "^2.1.0",
        "rimraf": "^5.0.5",
        "rollup": "^4.0.2",
        "sass": "^1.63.6",
        "sass-mq": "^6.0.0"
    }
}
